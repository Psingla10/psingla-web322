<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="fonts/icomoon/style1.css">

    <link rel="stylesheet" href="css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="css/style1.css">

    <title>Craving Register</title>
  </head>
  <body>


  <div class="d-md-flex half">
    <div class="bg" style="background-image: url('images0/blog-img-08.jpg');"></div>
    <div class="contents">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-12">
            <div class="form-block mx-auto" style="max-width:100%">
              <div class="text-center mb-12">
                <h3 class="text-uppercase">Meals<strong> Kits</strong></h3>
                <a href="/createmeal">Create New Meal</a>
              </div>
              
<div class="row row-space">
                            <table class="table table-bordered">
                        <tr><th>Operations</th><th>Title</th><th>Ingredients</th><th>Price</th><th>Is TopMeal</th><th>Image</th></tr>
                   {{# each result }}
                   
                           <tr>
                               <td><a href="/editmeal?id={{{this.title}}}">Edit</a>/<a href="/deletemeal?id={{{this.title}}}">Delete</a></td>
                               <td>    
          {{{ this.title }}}</td>
          <td>{{{this.ingredients}}}</td>
          <td>{{{this.price}}}</td>
          <td>{{{this.istopmeal}}}</td>
          <td><img src='{{{this.image}}}' width='100' height='100'/></td>
    </tr>     
    {{/each}}      
    </table>
                              </div>

            </div>
          </div>
        </div>
      </div>
    </div>


  </div>



    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>
