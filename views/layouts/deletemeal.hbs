<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="fonts/icomoon/style1.css">

    <link rel="stylesheet" href="css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="css/style1.css">

    <title>Edit Meal</title>
  </head>
  <body>


  <div class="d-md-flex half">
    <div class="bg" style="background-image: url('images0/blog-img-08.jpg');"></div>
    <div class="contents">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-12">
            <div class="form-block mx-auto">
              <div class="text-center mb-5">
                <h3 class="text-uppercase">Edit<strong> Meal</strong></h3>
              </div>
               {{# each result }}
                <form method="POST" enctype="multipart/form-data" action="/deletemeal">
                  <input class="input--style-4" type="hidden" value="{{{ this._id }}}" name="id">      
        
                        <div class="row row-space">
                            
                                <div class="input-group">
                                     <i class="fa fa-paper-plane icon"></i>
                                    <input readonly class="input--style-4" type="text" placeholder="Meal Title" value="{{{ this.title }}}"	 name="title">
                               
                            </div>
                            
                        </div>
               <div class="row row-space">
                          
                                <div class="input-group">
                                     <i class="fa fa-file-o icon"></i>
                                    <input readonly class="input--style-4" type="text" placeholder="Ingredients" value="{{{ this.ingredients }}}"	 name="ingredients">
                               
                            </div>
                            
                        </div>
<div class="row row-space">
                          
                                <div class="input-group">
                                     <i class="fa fa-key icon"></i>
                                    <textarea type="text" readonly class="input--style-4" class="form-control"   placeholder="Description"	 name="description">
{{{ this.description }}}
                                    </textarea>

                                        

                               
                            </div>
</div>

                          <div class="row row-space">
                          
                                <div class="input-group">
                                     <i class="fa fa-key icon"></i>
                                    <input type="text" readonly class="input--style-4" class="form-control"  placeholder="Price" value="{{{ this.price }}}"	 name="price">


                                        

                               
                            </div>
                            
                        </div>
						  <div class="row row-space">
                          
                                <div class="input-group">
                                     <i class="fa fa-money icon"></i>
                                    <input readonly class="input--style-4" type="number" placeholder="Cooking Time"	 name="cookingtime" value="{{{ this.cookingtime }}}">
                               
                            </div>
                            
                        </div>

                        <div class="row row-space">
                          
                                <div class="input-group">
                                     <i class="fa fa-key icon"></i>
                                    <input type="text" readonly class="input--style-4" class="form-control"  placeholder="Servings" value="{{{ this.servings }}}"	 name="servings">


                                        

                               
                            </div>
                            
                        </div>
						  <div class="row row-space">
                          
                                <div class="input-group">
                                     <i class="fa fa-money icon"></i>
                                    <input readonly class="input--style-4" type="number" placeholder="Calories" value="{{{ this.calories }}}"	 name="calories">
                               
                            </div>
                            
                        </div>
  <div class="row row-space">
                          
                                <div class="input-group">
                                     <i class="fa fa-money icon"></i>
                                    <input readonly class="input--style-4" type="number" placeholder="Category" value="{{{ this.category }}}"	 name="category">
                               
                            </div>
                            
                        </div>
                          <div class="row row-space">
                          
                                <div class="input-group">
                                    
                                    <input readonly class="input--style-4" accept="image/png, image/gif, image/jpeg"  type="file" 	 name="icon">
                               
                            </div>
                            
                        </div>
                         <div class="row row-space">
                          
                                <div class="input-group">
                                    
                                    <input   style="width:auto"  type="checkbox" value="true" name="istopmeal"> Is Top Meal
                               
                            </div>
                            
                        </div>
						  {{# if errors }}
    {{# each errors }}
          <p class="alert alert-danger">{{ this.msg }}</p>
    {{/each}}
{{/if}}

                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Delete</button>
                        </div>
  {{/each}}  
            </div>
          </div>
        </div>
      </div>
    </div>


  </div>



    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>
